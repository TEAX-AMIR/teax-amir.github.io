    <script>
        let btn = document.getElementById("gamesBtn");
        let list = document.getElementById("gamesList");

        btn.onclick = function () {
            if (list.style.display === "block") {
                list.style.display = "none";   // مخفی کن
            } else {
                list.style.display = "block";  // نشان بده
            }
        };
    </script>

